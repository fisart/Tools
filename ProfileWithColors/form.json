{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "ProfileName",
      "caption": "Profile Name"
    },
    {
      "type": "Select",
      "name": "VariableType",
      "caption": "Variable Type",
      "options": [
        { "label": "Integer", "value": "integer" },
        { "label": "Float", "value": "float" }
      ],
      "onChange": "IPS_UpdateFormField('StartValueInt', 'visible', ($VariableType === 'integer')); IPS_UpdateFormField('StartValueFloat', 'visible', ($VariableType === 'float')); IPS_UpdateFormField('EndValueInt', 'visible', ($VariableType === 'integer')); IPS_UpdateFormField('EndValueFloat', 'visible', ($VariableType === 'float')); IPS_UpdateFormField('StepSizeInt', 'visible', ($VariableType === 'integer')); IPS_UpdateFormField('StepSizeFloat', 'visible', ($VariableType === 'float'));"
    },
    {
      "type": "NumberSpinner",
      "name": "StartValueInt",
      "caption": "Start Value (Integer)",
      "visible": true
    },
    {
      "type": "NumberSpinner",
      "name": "StartValueFloat",
      "caption": "Start Value (Float)",
      "digits": 2,
      "visible": false
    },
    {
      "type": "NumberSpinner",
      "name": "EndValueInt",
      "caption": "End Value (Integer)",
      "visible": true
    },
    {
      "type": "NumberSpinner",
      "name": "EndValueFloat",
      "caption": "End Value (Float)",
      "digits": 2,
      "visible": false
    },
    {
      "type": "NumberSpinner",
      "name": "StepSizeInt",
      "caption": "Step Size (Integer)",
      "visible": true
    },
    {
      "type": "NumberSpinner",
      "name": "StepSizeFloat",
      "caption": "Step Size (Float)",
      "digits": 2,
      "visible": false
    },
    {
      "type": "SelectColor",
      "name": "StartColor",
      "caption": "Start Color"
    },
    {
      "type": "SelectColor",
      "name": "EndColor",
      "caption": "End Color"
    },
    {
      "type": "ValidationTextBox",
      "name": "Prefix",
      "caption": "Association Prefix"
    },
    {
      "type": "ValidationTextBox",
      "name": "Suffix",
      "caption": "Association Suffix"
    },
    {
      "type": "Button",
      "caption": "Create Profile",
      "onClick": "PWC_CreateProfileWithColors($id);"
    }
  ]
}
